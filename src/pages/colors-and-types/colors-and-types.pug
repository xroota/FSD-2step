block variables
  - var title = "Colors & Types";
  - var author = "enlore";
  - var theGreat = "<span>escape!</span>";
block header
block content
  include ../../blocks/rich-list-colors/rich-list-colors
  include ../../blocks/rich-list-types/rich-list-types
  include ../../blocks/logo/logo

  .colors-and-types
    +logo({
      logoClass: "colors-and-types__logo",
    })
    
    +rich-list-colors([["Dark Shade 100%","#1F2041","#1F2041"],
                       ["Dark Shade 75%","#1F2041","rgba(31, 32, 65, 0.75)"],
                       ["Dark Shade 50%","#1F2041","rgba(31, 32, 65, 0.5)"], 
                       ["Dark Shade 25%","#1F2041","rgba(31, 32, 65, 0.25)"],
                       ["Dark Shade 5%","#1F2041","rgba(31, 32, 65, 0.05)"],
                       ["Purple","#BC9CFF","#BC9CFF"],
                       ["Green","#6FCF97","#6FCF97"]                                     
                       ])(class="colors-and-types__colors")

    //tag- выводимое имя, addTag - тег добавляемый в разметку
    - 
      var tagItems = [
        {tag: "H1", text : "This one is the sub-section or widget title"},
        {tag: "H2", text : "Next one is the item title inside widgets"},
        {tag: "H3", text : "This is a label or CTA text"},
        {tag: "Body", text : "This is the body text which is used for most <br> of the design, like paragraphs, lists, etc."}
      ]
    +rich-list-types(tagItems)(class="colors-and-types__types")
  
block footer