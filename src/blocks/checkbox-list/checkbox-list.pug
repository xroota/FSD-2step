mixin checkbox-list(data)
  +dataFromJSON("checkbox-list", data)
  .checkbox-list(class=data.checkboxClass)&attributes(attributes)
    .checkbox-list__section
      h3.checkbox-list__title= data.title
      if data.buttonText
        .checkbox-list__button= data.buttonText
    ul.checkbox-list__items
      - for (var x = 0; x < data.items.length; x++){
      li.checkbox-list__item
        input.checkbox-list__item-checkbox-hidden(type="checkbox", name= data.name+"-checkbox-"+x, id=data.name+"-checkbox-"+x, checked=data.items[x].value)
        label.checkbox-list__item-checkbox(for= name=data.name+"-checkbox-"+x) 
        .checkbox-list__item-text-box
          if (data.title)
            div.checkbox-list__item-title= data.items[x].title
          .checkbox-list__item-text!= data.items[x].text
      - }