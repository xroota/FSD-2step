include ../../blocks/card/card
include ../../blocks/room-info/room-info
include ../../blocks/drop-down/drop-down
include ../../blocks/drop-down-date/drop-down-date

mixin card-booking(data)
    +card({
        title    : "",
        cardClass: "card-booking"
    })

      +room-info(data)(class='card-booking__room-info')

      +drop-down(
          {title         : "Прибытие",
           titleText     : "",
           placeholder   : "ДД.ММ.ГГГГ",
           inputText     : "",
           readOnly      : true,
           buttonText    : "",
           textFieldClass: "text-field--placeholder-dark-75",
           items         : [],
           addCalendar   : true,    
           menuButtons   : [
             {text       : "Очистить",
              name       : "clear",
             },
             {text       : "Применить",
              name       : "apply",
             },

           ],
           dropDownClass: "card-booking__drop-down-date-in"
           }
        )
      +drop-down(
          {title         : "Выезд",
           titleText     : "",
           placeholder   : "23.08.2019",
           inputText     : "",
           readOnly      : true,
           buttonText    : "",
           textFieldClass: "text-field--placeholder-dark-75",
           items         : [],
           addCalendar   : true,    
           menuButtons   : [
             {text       : "Очистить",
              name       : "clear",
             },
             {text       : "Применить",
              name       : "apply",
             },

           ],
           dropDownClass: "card-booking__drop-down-date-out"
           }

      )
      +drop-down(
          {title         : "Гости",
           titleText     : "",
           placeholder   : "Сколько гостей",
           inputText     : "3 гостя",
           readOnly      : true,
           buttonText    : "",
           textFieldClass: "text-field--placeholder-dark-75",
           items        : [
             {text      : "Взрослые",
              value     : 0
             },
             {text      : "Дети",
              value     : 0
             },
             {text      : "Младенцы",
              value     : 0
             }
           ],
           menuButtons  : [
             {text      : "Очистить",
              name      : "clear",
             },
             {text      : "Применить",
              name      : "apply",
             },

           ],
           dropDownClass: "card-booking__guests"
           }
        )

      mixin calc-box(data)
        ul.card-booking__calc-items
          each item in data.items
            li.card-booking__calc-item
              .card-booking__calc-item-text= item.text
              if item.hint
                .card-booking__calc-item-hint i
              .card-booking__calc-item-value= item.value
        .card-booking__total
          .card-booking__total-text= data.totalText
          .card-booking__total-line
          .card-booking__total-value= data.totalValue

      +calc-box({
         items  :[
          {text : "9 990₽ х 4 суток", 
           hint : "",
           value: "39 960₽"
           },
          {text : "Сбор за услуги: скидка 2 179₽", 
           hint : "hint",
           value: "0₽"
           },
          {text : "Сбор за дополнительные услуги", 
           hint : "hint",
           value: "300₽"
         }],
           totalText : "Итого",
           totalValue: "38 081₽" 

      })   
      +button(     
        { name       : "btn9",
          text       : "забронировать",
          symbol     : "arrow_forward",
          buttonClass: "card-booking__button-book button--fill button--width-full"
        })