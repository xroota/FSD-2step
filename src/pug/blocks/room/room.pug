include ../../blocks/rate-button/rate-button

mixin room(data)
  .room(class=data.roomClass)
    +slider(
        {
         items        : data.imageItems,
         sliderClass: "room__slider"
         }
      )
    +room-info(
        {roomNumber  : data.roomNumber,
         roomType    : data.roomType,
         roomPrice   : data.roomPrice,
         roomInfoClass: "room__room-info room-info--font-size-small"
        }
    )
    .room__line
    +rate-button(
      { name           : "rate-2",
        value          : 5,
        checked        : data.rateChecked,
        rateButtonClass: "room__rate-button"
      }
    )
    .room__rate-count 
        #{"strong"}= data.rateCount
        |   Отзывов


